<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:background="@color/common_background"
    android:orientation="vertical" >
 	<!--标题-->
    <RelativeLayout 
	    android:baselineAligned="false"
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/common_title_bar_height"
	    android:background="@color/common_titlebar_background" >
	    
	    <RelativeLayout 
	        android:id="@+id/title_bar_back"
	        android:layout_width="@dimen/common_title_bar_height"
	        android:layout_height="match_parent">
	        <ImageView 
		        android:layout_width="@dimen/common_title_bar_image_width"
		        android:layout_height="@dimen/common_title_bar_image_height"
		        android:layout_centerInParent="true"
		        android:duplicateParentState="true"
		        android:contentDescription="@string/app_name"
		        android:src="@drawable/title_bar_back_selector" /> 
		        
	    </RelativeLayout>
	    
	    <TextView 
	        android:id="@+id/title_bar_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="@string/app_name"
	        android:textSize="@dimen/common_text_size_supper_large"
	        android:textColor="@android:color/white"/>

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_alignParentRight="true" >
	        
			<!-- 	        搜索 		-->

		    <RelativeLayout
		        android:id="@+id/title_bar_search"
		        android:layout_width="@dimen/common_title_bar_height"
		        android:layout_height="match_parent"
		        android:visibility="gone" >

		        <ImageView 
			        android:layout_width="@dimen/common_title_bar_image_width"
			        android:layout_height="@dimen/common_title_bar_image_height"
			        android:layout_centerInParent="true"
			        android:duplicateParentState="true"
			        android:contentDescription="@string/app_name"
			        android:src="@drawable/title_bar_search_selector" /> 
			        
		    </RelativeLayout>    

	    </LinearLayout>

	</RelativeLayout>
</LinearLayout>