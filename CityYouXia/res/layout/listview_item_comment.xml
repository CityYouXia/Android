<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.youxia"
    android:id="@+id/listitem_comment"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/common_divided_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.youxia.widget.roundimage.RoundedImageView
            android:id="@+id/road_rescue_detail_listitem_rescuer_portrait"
            android:layout_width="@dimen/activity_road_rescue_detail_portrait_width_height"
            android:layout_height="@dimen/activity_road_rescue_detail_portrait_width_height"
            android:layout_marginBottom="@dimen/activity_road_rescue_detail_head_text_margin_left"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_marginTop="@dimen/activity_road_rescue_detail_head_text_margin_left"
            android:contentDescription="@string/app_name"
            android:src="@drawable/defalut_portrait"
            app:border_width="@dimen/zero_dp"
            app:corner_radius="@dimen/activity_road_rescue_detail_portrait_corner_radius" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_road_rescue_detail_head_text_margin_left"
            android:layout_marginRight="@dimen/common_margin_right"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_dp"
                android:layout_marginTop="@dimen/activity_road_rescue_detail_nickname_margin_top"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/road_rescue_detail_listitem_rescuer_nickname"
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.0"
                    android:includeFontPadding="false"
                    android:text="秋天的秋千"
                    android:textColor="@color/activity_road_rescue_detail_nickname_color"
                    android:textSize="@dimen/activity_road_rescue_detail_item_information_textsize" />

                <TextView
                    android:id="@+id/road_rescue_detail_listitem_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/activity_road_rescue_detail_head_text_margin_left"
                    android:includeFontPadding="false"
                    android:text="1楼"
                    android:textColor="@color/activity_road_rescue_detail_score_color"
                    android:textSize="@dimen/activity_road_rescue_detail_nickname_textsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_dp"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/activity_road_rescue_detail_status_height"
                    android:scaleType="fitXY"
                    android:src="@drawable/clock" />

                <TextView
                    android:id="@+id/road_rescue_detail_listitem_comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_road_rescue_detail_head_text_margin_left"
                    android:includeFontPadding="false"
                    android:text="2分钟前"
                    android:textColor="@color/activity_road_rescue_detail_score_color"
                    android:textSize="@dimen/activity_road_rescue_detail_nickname_textsize" />
            </LinearLayout>

            <TextView
                android:id="@+id/road_rescue_detail_listitem_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_right"
                android:includeFontPadding="false"
                android:text="楼主在哪啊？"
                android:textColor="@color/activity_road_rescue_detail_information_color"
                android:textSize="@dimen/activity_road_rescue_detail_item_information_textsize" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divide_line_height"
        android:layout_marginTop="@dimen/common_margin_top"
        layout="@layout/common_divided_line" />

</LinearLayout>