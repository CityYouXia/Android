<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.youxia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/activity_main_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_task_detail_portrait_width_height"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_right"
        android:layout_marginTop="@dimen/activity_task_detail_portrait_margin_top"
        android:orientation="horizontal" >

        <com.youxia.widget.roundimage.RoundedImageView
            android:id="@+id/activity_task_detail_user_portrait"
            android:layout_width="@dimen/activity_task_detail_portrait_width_height"
            android:layout_height="@dimen/activity_task_detail_portrait_width_height"
            android:contentDescription="@string/app_name"
            android:src="@drawable/defalut_portrait"
            app:border_width="@dimen/zero_dp"
            app:corner_radius="@dimen/activity_task_detail_portrait_corner_radius" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_task_detail_head_text_margin_left"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_dp"
                android:layout_weight="1.0"
                android:layout_marginTop="@dimen/activity_task_detail_nickname_margin_top"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/activity_task_detail_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/activity_task_detail_nickname_textsize"
                    android:textColor="@color/activity_task_detail_nickname_color"
                    android:text="会飞的猴子" />
                
                <ImageView 
                    android:id="@+id/activity_task_detail_status"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/activity_task_detail_status_height"
                    android:src="@drawable/unresolved"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_dp"
                android:layout_weight="1.0"
                android:orientation="horizontal" >
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/activity_task_detail_status_height"
                    android:src="@drawable/score"/>
                <TextView
                    android:id="@+id/activity_task_detail_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_task_detail_head_text_margin_left"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/activity_task_detail_nickname_textsize"
                    android:textColor="@color/activity_task_detail_score_color"
                    android:text="50积分" />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/activity_task_detail_status_height"
                    android:layout_marginLeft="@dimen/activity_task_detail_head_text_margin_left"
                    android:scaleType="fitXY"
                    android:src="@drawable/clock"/>
                <TextView
                    android:id="@+id/activity_task_detail_time_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_task_detail_head_text_margin_left"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/activity_task_detail_nickname_textsize"
                    android:textColor="@color/activity_task_detail_score_color"
                    android:text="2分钟前" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>